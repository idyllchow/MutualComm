<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="op_orientation" format="enum">
        <enum name="horizontal" value="0"/>
        <enum name="vertical" value="1"/>
    </attr>

    <declare-styleable name="RatioFrameLayout">
        <attr name="rf_ratio" format="float"/>
        <attr name="op_orientation"/>
    </declare-styleable>
    <!-- 圆形ImageView -->
    <declare-styleable name="SponiaCircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <declare-styleable name="CoolBar">
        <attr name="coolMode" format="enum">
            <enum name="homeMode" value="0" />
            <enum name="searchMode" value="1" />
            <enum name="backMode" value="2" />
        </attr>
        <attr name="showBottomLine" format="boolean" />
        <attr name="showMenu" format="boolean" />
    </declare-styleable>

    <attr name="cropImageStyle" format="reference" />

    <declare-styleable name="CropImageView">
        <attr name="highlightColor" format="reference|color" />
        <attr name="showThirds" format="boolean" />
        <attr name="showCircle" format="boolean" />
        <attr name="showHandles">
            <enum name="changing" value="0" />
            <enum name="always" value="1" />
            <enum name="never" value="2" />
        </attr>
    </declare-styleable>
</resources>