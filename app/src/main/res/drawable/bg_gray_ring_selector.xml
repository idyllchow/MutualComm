                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white_4c" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/white_4c" />
                    <stroke android:width="1px" android:color="@color/white_4c" />
                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="oval">
                    <solid android:color="@color/white_4c" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>