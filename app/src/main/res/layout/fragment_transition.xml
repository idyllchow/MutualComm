<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.idyll.mutualcomm.view.DragGridView
        android:id="@+id/drag_gridView_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/G"
        android:cacheColorHint="@android:color/transparent"
        android:gravity="center"
        android:padding="1dp"
        android:listSelector="@android:color/transparent"
        android:numColumns="5"
        android:scrollbars="none" />

    <com.idyll.mutualcomm.view.TransGridView
        android:id="@+id/gv_player_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/G"
        android:numColumns="4"
        android:padding="1dp"
        android:gravity="center"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:layout_gravity="end" />


    <com.idyll.mutualcomm.view.StatsDragGridView
        android:id="@+id/drag_gridView_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:cacheColorHint="@android:color/transparent"
        android:gravity="center"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:padding="1dp"
        android:stretchMode="columnWidth" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="F"
            android:textColor="@color/white_4c"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M"
            android:textColor="@color/white_4c"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="D"
            android:textColor="@color/white_4c"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="GK"
            android:textColor="@color/white_4c"
            android:textSize="18sp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/animate_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <com.idyll.mutualcomm.view.FontTextView
            android:id="@+id/animate_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/gray_circle_bg"
            android:gravity="center"
            android:textColor="@color/gray_text"
            android:textSize="35sp"
            app:fontStyle="lexia_bold" />
    </FrameLayout>
</FrameLayout>
